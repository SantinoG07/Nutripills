<section id="sectionfive" class="min-h-screen bg-black flex items-center">
    <div class="container mx-auto px-4 py-20">
        <div class="max-w-4xl mx-auto text-center space-y-12">
            
            <!-- Contenido principal -->
            <div class="space-y-6">
                <span class="text-verdeclaro text-sm font-semibold tracking-widest uppercase">Comienza Hoy</span>
                <h2 class="text-5xl md:text-7xl font-light text-white leading-tight">
                    El futuro de la<br/>
                    <span class="font-bold">nutrición está aquí.</span>
                </h2>
                <p class="text-xl text-gray-400 leading-relaxed max-w-2xl mx-auto">
                    Únete a miles de personas que ya transformaron su relación con la comida.
                </p>
            </div>
            
            <!-- Línea decorativa central -->
            <div class="flex justify-center">
                <div class="h-px w-32 bg-gradient-to-r from-transparent via-verdeclaro to-transparent"></div>
            </div>
            
            <!-- Grid de productos -->
            <div class="grid grid-cols-2 md:grid-cols-4 gap-8 py-8">
                <div class="group cursor-pointer">
                    <div class="relative">
                        <div class="absolute inset-0 bg-verdeclaro rounded-full blur-3xl opacity-0 group-hover:opacity-20 transition-opacity duration-500"></div>
                        <img 
                            src="/pildora_vr.png" 
                            alt="Clásico" 
                            class="relative w-32 h-32 mx-auto drop-shadow-xl transform group-hover:scale-110 transition-transform duration-500"
                        />
                    </div>
                    <p class="text-white mt-4 font-medium">Clásico</p>
                </div>
                
                <div class="group cursor-pointer">
                    <div class="relative">
                        <div class="absolute inset-0 bg-verdeclaro rounded-full blur-3xl opacity-0 group-hover:opacity-20 transition-opacity duration-500"></div>
                        <img 
                            src="/pildora_ar.png" 
                            alt="Wow" 
                            class="relative w-32 h-32 mx-auto drop-shadow-xl transform group-hover:scale-110 transition-transform duration-500"
                        />
                    </div>
                    <p class="text-white mt-4 font-medium">Wow!</p>
                </div>
                
                <div class="group cursor-pointer">
                    <div class="relative">
                        <div class="absolute inset-0 bg-verdeclaro rounded-full blur-3xl opacity-0 group-hover:opacity-20 transition-opacity duration-500"></div>
                        <img 
                            src="/pilora_va.png" 
                            alt="Dropdown" 
                            class="relative w-32 h-32 mx-auto drop-shadow-xl transform group-hover:scale-110 transition-transform duration-500"
                        />
                    </div>
                    <p class="text-white mt-4 font-medium">So dropdown!</p>
                </div>
                
                <div class="group cursor-pointer">
                    <div class="relative">
                        <div class="absolute inset-0 bg-verdeclaro rounded-full blur-3xl opacity-0 group-hover:opacity-20 transition-opacity duration-500"></div>
                        <img 
                            src="/pildora_rr.png" 
                            alt="Select" 
                            class="relative w-32 h-32 mx-auto drop-shadow-xl transform group-hover:scale-110 transition-transform duration-500"
                        />
                    </div>
                    <p class="text-white mt-4 font-medium">Very select!</p>
                </div>
            </div>
            
            <!-- CTA Button -->
            <div class="pt-8">
                <a 
                    href="/Comprar" 
                    class="inline-block bg-verdeclaro hover:bg-verdeoscuro px-12 py-5 rounded-lg text-black hover:text-white font-bold text-lg transition-all transform hover:scale-105 shadow-2xl"
                >
                    Explorar la tienda
                </a>
                <p class="text-sm text-gray-500 mt-4">$10.000 por frasco • Envío gratis en compras superiores a $30.000</p>
            </div>
            
        </div>
    </div>
</section>