---
import "../styles/global.css";
---

<div class="bg-gray-900 rounded-lg p-8 shadow-lg hover:shadow-xl transition-shadow w-full max-w-4xl">
    <div class="flex gap-8 items-center">
        <!-- Imagen del producto -->
        <img 
            id="imagenProducto"
            src="/pildora_vr.png" 
            alt="Nutri Pills" 
            class="w-32 h-32 rounded-lg object-cover flex-shrink-0"
        />

        <!-- Información del producto -->
        <div class="flex-1 min-w-0">
            <h3 class="text-2xl font-bold text-white mb-4">Nutri Pills</h3>
            
            <div class="space-y-3 text-base">
                <!-- Sabor -->
                <div class="flex gap-3">
                    <span class="font-semibold text-gray-400 w-24">Sabor:</span>
                    <span id="saborCarrito" class="text-white">Clásico</span>
                </div>

                <!-- Precio -->
                <div class="flex gap-3">
                    <span class="font-semibold text-gray-400 w-24">Precio:</span>
                    <span class="text-verdeclaro font-bold text-lg">$10.000</span>
                </div>

                <!-- Cantidad -->
                <div class="flex gap-3">
                    <span class="font-semibold text-gray-400 w-24">Cantidad:</span>
                    <span id="cantidadCarrito" class="text-white font-bold">1</span>
                </div>
            </div>
        </div>

        <!-- Botón eliminar -->
        <button 
            id="btnEliminar"
            class="text-rojoclaro hover:text-rojooscuro transition-colors p-3 rounded hover:bg-gray-800 flex-shrink-0"
            title="Eliminar del carrito"
        >
            <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="2"
                stroke="currentColor"
                class="w-7 h-7"
            >
                <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0"
                />
            </svg>
        </button>
    </div>
</div>