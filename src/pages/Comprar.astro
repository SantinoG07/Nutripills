---
import Layout from '../layouts/Layout.astro';
---

<Layout escondercomprar={true}>
        <main class="container mx-auto px-4 py-8 mt-16">
                <div class="md:flex">
                    <div class="md:w-1/2">
                        <img class="w-full h-full object-cover" src="../../public/pildora_vr.png" alt="Product Image">
                    </div>
                    <div class="p-8 md:w-1/2 flex flex-col justify-center">
                        <h1 class="text-3xl font-bold text-white mb-4">Nutri pills</h1>
                        <p class="text-3xl font-bold text-white">$10000</p>

                        <div class="w-50 mt-10">
                        <h2 class="font-bold text-white">Sabor:</h2>
                        <select id="options" name="options"
                            class="w-full px-4 py-3 bg-gray-700 text-gray-300 focus:outline-none focus:ring-0 font-bold rounded-md cursor-pointer">
                            <option >Clasico</option>
                            <option >Wow!</option>
                            <option >So dropdown!</option>
                            <option >Very select!</option>
                            <option >Very select!</option>
                        </select>
                        </div>

                        <div class="w-50 mt-10 mb-10">
                        <h2 class="font-bold text-white">Cantidad:</h2>
                        <select id="options" name="options"
                            class="w-full px-4 py-3 bg-gray-700 text-gray-300 focus:outline-none focus:ring-0 font-bold rounded-md cursor-pointer">
                                <option >1</option>
                                <option >2</option>
                                <option >3</option>
                                <option >4</option>
                        </select>
                        </div>
                        


                        <a href="/CompraF" class="w-50 bg-rojooscuro hover:bg-rojoclaro cursor-pointer text-white font-bold py-3 px-6 rounded">Comprar</a>
                    </div>
                </div>
        </main>
</Layout>